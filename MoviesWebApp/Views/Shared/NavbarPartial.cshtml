            {
                <a asp-action="@nameof(AccountController.Register)" asp-controller="Account" class="navbar-link">
                    <i class="fas fa-user-plus navbar-link-icon"></i>
                    <span class="navbar-link-text">Zarejestruj się</span>
                </a>
                <a asp-action="@nameof(AccountController.Login)" asp-controller="Account" class="navbar-link">
                    <i class="fas fa-sign-in-alt navbar-link-icon"></i>
                    <span class="navbar-link-text">Zaloguj się</span>
                </a>
            }
            else
            {
                <a asp-action="@nameof(MovieController.Add)" asp-controller="Movie" class="navbar-link">
                    <i class="fas fa-plus navbar-link-icon"></i>
                    <span class="navbar-link-text">Dodaj film</span>
                </a>
                <form asp-action="@nameof(AccountController.Logout)" asp-controller="Account" class="navbar-link-form">
