<nav class="navbar">
    <div class="navbar-container">
        <a id="navbarCollapseButton" class="navbar-link">
            <i class="fas fa-bars navbar-link-icon"></i>
            <span class="navbar-link-text">Rozwiń</span>
        </a>
        <div class="navbar-collapse-content" id="navbarCollapseContent">
            <a href="/" class="navbar-link">
                <i class="fas fa-film navbar-link-icon"></i>
                <span class="navbar-link-text">Strona główna</span>
            </a>
